<% if @song.errors.any? %>
    <div id="error_explanation"
        <h3>
            <%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:
        </h3>

        <ul>
            <% @song.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @song do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %><br />
    </div>

    <div class="field">
        <%= f.label :released %>
        <%= f.check_box :released %><br />
    </div>

    <div class="field">
        <%= f.label :release_year %>
        <%= f.number_field :release_year %><br />
    </div>

    <div class="field">
        <%= f.label :genre %>
        <%= f.text_field :genre %><br />
    </div>

    <div class="field">
        <%= f.label :artist_name %>
        <%= f.text_field :artist_name %><br />
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>